# Development Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
# Get this from your Neon, Supabase, or local PostgreSQL database
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# TMDB API Configuration
# Get your API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key

# JWT Configuration
# Generate random 32+ character strings for security
JWT_ACCESS_SECRET=your_jwt_access_secret_min_32_chars_long_for_security
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_chars_long_for_security

# Session Configuration
# Generate a random 32+ character string for security
SESSION_SECRET=your_session_secret_min_32_chars_long_for_security

# Admin User Configuration (for development)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Cloudinary Configuration (for image uploads)
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# SendGrid Configuration (for email OTPs)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key

# Twilio Configuration (for SMS OTPs)
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
# Alternative: TWILIO_MESSAGING_SERVICE_SID=your_messaging_service_sid

# OAuth Provider Configuration
# Google OAuth - Get from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth - Get from: https://developers.facebook.com/apps/
FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret

# GitHub OAuth - Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Twitter OAuth - Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# Replit Configuration (for Replit deployment - optional for local dev)
REPLIT_DOMAINS=your_replit_domain
ISSUER_URL=https://replit.com/oidc
REPL_ID=your_repl_id

# Optional: Seed admin user in production
# SEED_ADMIN=true